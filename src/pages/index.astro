---
import '../styles/global.css';


const principles = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" /></svg>`,
    title: 'Platform Native',
    description: 'Direct system calls. No abstraction layers. No virtual machines. Your code talks to the metal.',
    color: 'brand-blue',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7"><path stroke-linecap="round" stroke-linejoin="round" d="m21 7.5-9-5.25L3 7.5m18 0-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" /></svg>`,
    title: 'Zero-Dependency',
    description: 'No transitive dependencies. No supply-chain risk. Auditable codebases you can read in an afternoon.',
    color: 'brand-orange',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" /></svg>`,
    title: 'ACID-Compliant',
    description: 'Atomic, Consistent, Isolated, Durable. Data integrity guaranteed at every layer of the stack.',
    color: 'accent',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Native Stack — Open-source libraries delivering native performance via minimal abstraction. Zero dependencies, ACID-compliant, platform-native." />
    <meta name="theme-color" content="#1A1F2E" />

    <meta property="og:title" content="Native Stack — Native Performance via Minimal Abstraction" />
    <meta property="og:description" content="Open-source libraries delivering native performance. Zero dependencies, ACID-compliant, platform-native." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://native-stack.github.io" />
    <meta property="og:image" content="https://native-stack.github.io/native-stack-logo-centre.png" />

    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" /></noscript>

    <!-- Preload LCP image -->
    <link rel="preload" as="image" type="image/webp" href="/native-stack-logo-sym.webp" fetchpriority="high" />

    <title>Native Stack — Native Performance via Minimal Abstraction</title>
  </head>
  <body class="min-h-screen overflow-x-hidden noise-overlay">

    <!-- ===== NAVIGATION ===== -->
    <nav class="fixed top-0 z-50 w-full border-b border-white/5 bg-navy/80 backdrop-blur-xl">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a href="/" class="flex items-center gap-3 transition-opacity hover:opacity-80">
          <img src="/native-stack-logo-sym.webp" alt="Native Stack" class="h-8 w-auto" />
          <span class="font-mono text-sm font-semibold text-white tracking-wide">native stack</span>
        </a>
        <div class="flex items-center gap-6">
          <a href="#principles" class="hidden text-sm text-slate-light transition-colors hover:text-white sm:block">Principles</a>
          <a href="#libraries" class="hidden text-sm text-slate-light transition-colors hover:text-white sm:block">Libraries</a>

          <a href="https://github.com/native-stack" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-lg border border-brand-blue/40 bg-brand-blue/10 px-4 py-2 text-sm font-medium text-brand-blue-light transition-all hover:bg-brand-blue/20 hover:border-brand-blue/60">
            <svg class="size-4" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
            GitHub
          </a>
        </div>
      </div>
    </nav>

    <main>
    <!-- ===== HERO ===== -->
    <section id="hero" class="relative flex min-h-screen items-center justify-center px-6 pt-20 pb-8 sm:pt-28 sm:pb-0">
      <!-- Ambient glow orbs -->
      <div class="glow-orb glow-orb-blue" style="width: 500px; height: 500px; top: 10%; left: -10%;" aria-hidden="true"></div>
      <div class="glow-orb glow-orb-orange" style="width: 400px; height: 400px; bottom: 10%; right: -5%;" aria-hidden="true"></div>

      <!-- Grid background -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden" aria-hidden="true">
        <div class="absolute inset-0" style="background-image: linear-gradient(rgba(59,76,192,0.04) 1px, transparent 1px), linear-gradient(90deg, rgba(59,76,192,0.04) 1px, transparent 1px); background-size: 60px 60px;"></div>
        <div class="absolute inset-0" style="background: radial-gradient(ellipse 70% 50% at 50% 40%, rgba(59,76,192,0.08), transparent);"></div>
      </div>

      <div class="relative z-10 mx-auto max-w-4xl text-center">
        <!-- Logo -->
        <div class="mb-6 mt-4 flex justify-center opacity-0 animate-fade-up sm:mb-10 sm:mt-12" style="animation-delay: 0s;">
          <img src="/native-stack-logo-sym.webp" alt="Native Stack Logo" class="h-20 w-auto animate-float drop-shadow-2xl sm:h-32" fetchpriority="high" width="128" height="128" />
        </div>

        <!-- Badge -->
        <div class="mb-5 inline-flex items-center gap-2 rounded-full border border-brand-blue/25 bg-brand-blue/10 px-4 py-1.5 font-mono text-xs text-brand-blue-light opacity-0 animate-fade-up stagger-1 sm:text-sm sm:mb-8">
          <span class="inline-block size-1.5 rounded-full bg-brand-orange animate-pulse"></span>
          Open Source
        </div>

        <h1 class="font-sans text-3xl font-extrabold leading-[1.1] tracking-tight text-white opacity-0 animate-fade-up stagger-2 sm:text-5xl md:text-7xl">
          Native Performance<br />
          <span class="gradient-text">via Minimal Abstraction</span>
        </h1>

        <p class="mx-auto mt-4 max-w-2xl text-base leading-relaxed text-slate-light opacity-0 animate-fade-up stagger-3 sm:mt-6 sm:text-xl">
          A curated set of open-source libraries that bypass runtime overhead and talk directly to the platform. Zero dependencies. Maximum velocity.
        </p>

        <div class="mt-6 flex flex-wrap items-center justify-center gap-3 opacity-0 animate-fade-up stagger-4 sm:mt-10 sm:gap-4">
          <a href="https://github.com/native-stack" target="_blank" rel="noopener noreferrer" class="group relative inline-flex items-center gap-2 overflow-hidden rounded-xl bg-brand-blue px-7 py-3.5 font-semibold text-white transition-all duration-300 hover:shadow-xl hover:shadow-brand-blue/25 hover:scale-[1.02] active:scale-[0.98]">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
            View on GitHub
          </a>
          <a href="#libraries" class="group inline-flex items-center gap-2 rounded-xl border border-slate/25 bg-white/5 px-7 py-3.5 font-semibold text-slate-lightest backdrop-blur-sm transition-all duration-300 hover:border-brand-orange/40 hover:text-brand-orange hover:bg-brand-orange/5 hover:scale-[1.02] active:scale-[0.98]">
            Explore Libraries
            <svg class="size-4 transition-transform duration-300 group-hover:translate-y-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" /></svg>
          </a>
        </div>

        <!-- Scroll indicator -->
        <div class="mt-10 flex justify-center opacity-0 animate-fade-up stagger-6 sm:mt-20">
          <div class="flex flex-col items-center gap-2 text-slate/40">
            <span class="text-xs font-mono uppercase tracking-widest">Scroll</span>
            <div class="h-8 w-px bg-gradient-to-b from-slate/30 to-transparent animate-glow"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- ===== PRINCIPLES ===== -->
    <section id="principles" class="relative px-6 py-28 sm:py-36">
      <div class="mx-auto max-w-5xl">
        <div class="mb-20 text-center">
          <p class="mb-4 font-mono text-sm tracking-[0.25em] text-brand-orange uppercase">Principles</p>
          <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-5xl">Built on Conviction</h2>
          <p class="mx-auto mt-5 max-w-xl text-lg text-slate-light">Every library in the stack is built on three non-negotiable engineering principles.</p>
        </div>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {principles.map((p, i) => (
            <div class={`group card-hover rounded-2xl border border-white/5 bg-navy-light/60 p-8 backdrop-blur-sm`}>
              <div class={`mb-6 inline-flex rounded-xl bg-${p.color}/10 p-3.5 text-${p.color} ring-1 ring-${p.color}/20 transition-all duration-300 group-hover:bg-${p.color}/15 group-hover:ring-${p.color}/40 group-hover:scale-110`}>
                <Fragment set:html={p.icon} />
              </div>
              <h3 class="mb-3 text-xl font-bold text-white">{p.title}</h3>
              <p class="leading-relaxed text-slate-light">{p.description}</p>
              <div class={`mt-6 h-0.5 w-12 rounded-full bg-${p.color}/30 transition-all duration-500 group-hover:w-full group-hover:bg-${p.color}/50`}></div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ===== LIBRARIES — COMING SOON ===== -->
    <section id="libraries" class="relative px-6 py-28 sm:py-36">
      <!-- Subtle divider glow -->
      <div class="pointer-events-none absolute left-1/2 top-0 -translate-x-1/2" aria-hidden="true">
        <div class="h-px w-96 bg-gradient-to-r from-transparent via-brand-blue/30 to-transparent"></div>
      </div>

      <div class="mx-auto max-w-3xl text-center">
        <p class="mb-4 font-mono text-sm tracking-[0.25em] text-brand-orange uppercase">Libraries</p>
        <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-5xl">The Stack</h2>
        <p class="mx-auto mt-5 max-w-xl text-lg text-slate-light">Zero-dependency, platform-native libraries are being forged. Stay tuned.</p>

        <!-- Pulsing Coming Soon badge -->
        <div class="mt-12 flex items-center justify-center gap-3">
          <div class="h-px w-20 bg-gradient-to-r from-transparent to-brand-orange/20 sm:w-32"></div>
          <span class="flex items-center gap-2.5 rounded-full border border-brand-orange/30 bg-brand-orange/10 px-6 py-2.5 font-mono text-sm font-medium text-brand-orange">
            <span class="relative flex h-2 w-2">
              <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-brand-orange/75 opacity-75"></span>
              <span class="relative inline-flex h-2 w-2 rounded-full bg-brand-orange"></span>
            </span>
            Coming Soon
          </span>
          <div class="h-px w-20 bg-gradient-to-l from-transparent to-brand-orange/20 sm:w-32"></div>
        </div>

        <!-- Watch on GitHub CTA -->
        <div class="mt-10">
          <a href="https://github.com/native-stack" target="_blank" rel="noopener noreferrer" class="group inline-flex items-center gap-2.5 rounded-full border border-brand-blue/30 bg-brand-blue/10 px-6 py-3 font-medium text-brand-blue-light transition-all duration-300 hover:bg-brand-blue/20 hover:border-brand-blue/50 hover:scale-105">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .3a12 12 0 00-3.8 23.38c.6.12.83-.26.83-.57L9 20.98c-3.34.73-4.04-1.61-4.04-1.61-.55-1.39-1.34-1.76-1.34-1.76-1.08-.74.08-.73.08-.73 1.2.09 1.84 1.24 1.84 1.24 1.07 1.83 2.8 1.3 3.49 1 .1-.78.42-1.3.76-1.6-2.67-.31-5.47-1.34-5.47-5.93 0-1.31.47-2.38 1.24-3.22-.14-.3-.54-1.52.1-3.18 0 0 1-.32 3.3 1.23a11.5 11.5 0 016.02 0c2.28-1.55 3.29-1.23 3.29-1.23.64 1.66.24 2.88.12 3.18a4.65 4.65 0 011.23 3.22c0 4.61-2.8 5.62-5.48 5.92.42.36.81 1.1.81 2.22l-.01 3.29c0 .31.2.69.82.57A12 12 0 0012 .3z" /></svg>
            Watch on GitHub
            <svg class="size-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ===== TERMINAL MOCKUP ===== -->
    <section id="install" class="relative px-6 py-28 sm:py-36">
      <!-- Subtle divider glow -->
      <div class="pointer-events-none absolute left-1/2 top-0 -translate-x-1/2" aria-hidden="true">
        <div class="h-px w-96 bg-gradient-to-r from-transparent via-brand-orange/30 to-transparent"></div>
      </div>

      <div class="mx-auto max-w-2xl">
        <div class="mb-14 text-center">
          <p class="mb-4 font-mono text-sm tracking-[0.25em] text-brand-orange uppercase">Stay Tuned</p>
          <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-5xl">One Command Away</h2>
          <p class="mx-auto mt-5 max-w-md text-lg text-slate-light">When we launch, getting started will be this simple.</p>
        </div>

        <!-- Terminal chrome -->
        <div class="card-hover overflow-hidden rounded-2xl border border-white/10 bg-[#0D1117] shadow-2xl shadow-black/40">
          <!-- Title bar -->
          <div class="flex items-center gap-2 border-b border-white/5 bg-[#161B22] px-4 py-3.5">
            <span class="size-3 rounded-full bg-[#FF5F57] transition-transform hover:scale-125"></span>
            <span class="size-3 rounded-full bg-[#FFBD2E] transition-transform hover:scale-125"></span>
            <span class="size-3 rounded-full bg-[#28C840] transition-transform hover:scale-125"></span>
            <span class="ml-auto font-mono text-xs text-slate/50">~/project</span>
          </div>
          <!-- Terminal body -->
          <div class="p-6 font-mono text-sm leading-loose sm:p-8">
            <div class="flex items-center">
              <span class="mr-3 select-none text-brand-blue-light">❯</span>
              <span class="typing-text text-brand-orange">coming soon...</span>
              <span class="typing-cursor ml-0.5 text-slate-lightest">▌</span>
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- ===== CTA BANNER ===== -->
    <section class="relative px-6 py-28">
      <div class="mx-auto max-w-3xl text-center">
        <div class="rounded-3xl border border-white/5 bg-gradient-to-br from-brand-blue/10 via-navy-light to-brand-orange/10 p-12 sm:p-16">
          <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Ready to go native?</h2>
          <p class="mx-auto mt-4 max-w-lg text-lg text-slate-light">Join the community building the next generation of zero-overhead tools.</p>
          <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
            <a href="https://github.com/native-stack" target="_blank" rel="noopener noreferrer" class="group inline-flex items-center gap-2 rounded-xl bg-brand-blue px-7 py-3.5 font-semibold text-white transition-all duration-300 hover:shadow-xl hover:shadow-brand-blue/25 hover:scale-[1.02] active:scale-[0.98]">
              <svg class="size-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
              Star on GitHub
            </a>
          </div>
        </div>
      </div>
    </section>
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="border-t border-white/5 px-6 py-12">
      <div class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-6 sm:flex-row">
        <a href="/" class="flex items-center gap-3 transition-opacity hover:opacity-80">
          <img src="/native-stack-logo-sym.webp" alt="Native Stack" class="h-6 w-auto" />
          <span class="font-mono text-sm text-slate">native stack</span>
        </a>
        <p class="text-sm text-slate/40">
          Made with ❤️ by Native Stack
        </p>
        <div class="flex items-center gap-4">
          <a href="https://github.com/native-stack" target="_blank" rel="noopener noreferrer" class="text-slate/40 transition-colors hover:text-white" aria-label="GitHub">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
